
<div id="login-wrapper">
	<div id="username-login-form">
		<p id="login-fail"></p>
		<form id="set-name-form">
				<label>Who the hell are you?</label>
				<input size="15" id="username" placeholder="some bitch"></input>
				<input type="submit"></input>
		</form>
	</div>
</div>

<div id="content-wrapper">
	<div id="chat-wrapper">
		<div id="chat"></div>
	</div>
	<div id="sender-wrapper">
		<form id="send-message">
			<div id="input-container">
				<!-- <input type="textarea" id="message" maxlength="1000"> -->
				<textarea id="message" rows="5" form="send-message"></textarea>
				<input type="submit" id="submitter"></input>
			</div>
		</form>
	</div>
	<div id="users"></div>
</div>
<script src="vendors/socketio/node_modules/socket.io-client/socket.io.js"></script>
<script src="vendors/jquery/dist/jquery.js"></script>
<script src="javascripts/app.js"></script>
<link rel='stylesheet' href='/stylesheets/chat-stylesheets/chat-style.css' />

